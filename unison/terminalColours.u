type Colour = Colour base.Text

blue = Colour "\033[94"

colourEnd = Colour "\033[0m"

colourToText colour = 
  case colour of
    Colour.Colour text -> text

withColour : Colour -> base.Text -> base.Text
withColour color text = colourToText color base.Text.++ text base.Text.++ colourToText colourEnd

